{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
		    "path" : "pages/home/home",
		    "style" : {}
		},
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/center/index",
			"style": {
				"navigationBarTitleText": "uView-center"
			}
		}, {
			"path": "pages/login/login",
			"style": {
				"navigationBarTitleText": "登录"
			}
		}, {
			"path": "pages/switchIdentity/switchIdentity",
			"style": {}
		},
		{
			"path": "pages/wode/wode",
			"style": {
				"navigationBarTextStyle": "black",
				"navigationBarTitleText": "我的"
			}
		},
		{
			"path": "pages/feedback/feedback",
			"style": {
				"navigationBarTextStyle": "black",
				"navigationBarTitleText": "我的反馈"
			}
		},
		{
			"path": "pages/history-feedback/history-feedback",
			"style": {
				"navigationBarTextStyle": "black",
				"navigationBarTitleText": "历史反馈"
			}
		},
		{
			"path": "pages/fgtPassword/fgtPassword",
			"style": {
				"navigationBarTextStyle": "black",
				"navigationBarTitleText": "找回密码",
				"navigationBarBackgroundColor": "#FFFFFF"
				
				
			}
		},
		{
			"path": "pages/register/register",
			"style": {
				"navigationBarTitleText": "注册"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "求职帝",
		"navigationBarBackgroundColor": "#00A8FF",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#909399",
		"selectedColor": "#303133",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
			"pagePath": "pages/index/index",
			"iconPath": "static/index.png",
			"selectedIconPath": "static/index-selected.png",
			"text": "首页"
		}, {
			"pagePath": "pages/center/index",
			"iconPath": "static/center.png",
			"selectedIconPath": "static/center-selected.png",
			"text": "我"
		}]
	},
	"condition": { //模式配置，仅开发期间生效
		"current": 0, //当前激活的模式（list 的索引项）
		"list": [{
			"name": "login", //模式名称
			"path": "pages/login/login", //启动页面，必选
			"query": "interval=4000&autoplay=false" //启动参数，在页面的onLoad函数里面得到。
		}, {
			"name": "switchIdentity", //模式名称
			"path": "pages/switchIdentity/switchIdentity", //启动页面，必选
			"query": "interval=4000&autoplay=false" //启动参数，在页面的onLoad函数里面得到。
		},
		{
					"name": "我的", //模式名称
					"path": "pages/wode/wode", //启动页面，必选
					"query": "interval=4000&autoplay=false" //启动参数，在页面的onLoad函数里面得到。
				},
				{
							"name": "我的反馈", //模式名称
							"path": "pages/feedback/feedback", //启动页面，必选
							"query": "interval=4000&autoplay=false" //启动参数，在页面的onLoad函数里面得到。
						},
						{
									"name": "历史反馈", //模式名称
									"path": "pages/history-feedback/history-feedback", //启动页面，必选
									"query": "interval=4000&autoplay=false" //启动参数，在页面的onLoad函数里面得到。
								}]
	}
}
